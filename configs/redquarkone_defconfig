BR2_ROOTFS_POST_IMAGE_SCRIPT="board/redquark/redquarkone/post-image.sh"
BR2_ROOTFS_POST_SCRIPT_ARGS="board/redquark/redquarkone/boot-mali.cmd $(TARGET_DIR)/boot"

# Kernel
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_CUSTOM_GIT=y
